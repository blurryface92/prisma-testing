extends _app.pug

block content 
    .blogs
        h1 Blogs
        h3 Welcome #{user}
    
    #blog_heading
        h2 Latest Blogs
    .blogContainer
        each blog in blogs
            .blog
                each post in blog.posts
                    .post_content
                        h3 #{post.title}
                        .post_header
                            span By #{blog.name} &nbsp;
                            if user == blog.name
                                .btnContainer 
                                    form(method="POST" action=`/api/blog/delete/${post.id}`)
                                        #delBtn
                                            button(type="submit") Delete | 
                                    a(href=`/api/blog/edit/${post.id}`) Edit
                        p  #{post.slug}
                        a(href=`/api/blog/${post.id}`) Read more
